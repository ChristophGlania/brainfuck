<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="annotationHover" name="Annotation Hover Contribution to Brainfuck Editor" schema="schema/annotationHover.exsd"/>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.birenheide.bf.ed.BfEditor"
            contributorClass="org.birenheide.bf.ed.BfEditorActionContributor"
            default="true"
            icon="icons/brainfuck.gif"
            id="org.birenheide.bf.BrainfuckEditor"
            name="Brainfuck Editor"
            symbolicFontName="org.birenheide.bf.EditorFont">
         <contentTypeBinding
               contentTypeId="org.birenheide.bf.brainfuck">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            default-charset="UTF-8"
            file-extensions="bf"
            id="org.birenheide.bf.brainfuck"
            name="Brainfuck File"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.themes">
      <themeElementCategory
            id="org.birenheide.bf.editor"
            label="Brainfuck">
      </themeElementCategory>
      <fontDefinition
            categoryId="org.birenheide.bf.editor"
            defaultsTo="org.eclipse.jface.textfont"
            id="org.birenheide.bf.EditorFont"
            label="Brainfuck Editor Text Font">
      </fontDefinition>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.birenheide.bf.ui.BfPerspectiveFactory"
            fixed="false"
            icon="icons/brainfuck.gif"
            id="org.birenheide.bf.Brainfuck"
            name="Brainfuck">
         <description>
            Brainfuck Editing and Debugging
         </description>
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.birenheide.bf.Brainfuck">
         <actionSet
               id="org.eclipse.debug.ui.breakpointActionSet">
         </actionSet>
         <actionSet
               id="org.eclipse.debug.ui.launchActionSet">
         </actionSet>
         <view
               id="org.eclipse.ui.navigator.ProjectExplorer"
               minimized="false"
               ratio="0.2"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               ratio="0.7"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               id="org.eclipse.ui.views.TaskList"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="true">
         </view>
         <view
               id="org.eclipse.ui.views.ProblemView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="true">
         </view>
         <newWizardShortcut
               id="org.birenheide.bf.newBrainfuckFile">
         </newWizardShortcut>
         <newWizardShortcut
               id="org.eclipse.ui.wizards.new.file">
         </newWizardShortcut>
         <newWizardShortcut
               id="org.eclipse.ui.wizards.new.project">
         </newWizardShortcut>
         <newWizardShortcut
               id="org.eclipse.ui.wizards.new.folder">
         </newWizardShortcut>
         <viewShortcut
               id="org.eclipse.debug.ui.DebugView">
         </viewShortcut>
         <viewShortcut
               id="org.eclipse.debug.ui.MemoryView">
         </viewShortcut>
         <viewShortcut
               id="org.eclipse.ui.navigator.ProjectExplorer">
         </viewShortcut>
         <viewShortcut
               id="org.eclipse.ui.console.ConsoleView">
         </viewShortcut>
         <viewShortcut
               id="org.eclipse.ui.views.TaskList">
         </viewShortcut>
         <viewShortcut
               id="org.eclipse.ui.views.ProblemView">
         </viewShortcut>
         <showInPart
               id="org.eclipse.ui.navigator.ProjectExplorer">
         </showInPart>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors.templates">
      <contextTypeRegistry
            id="org.birenheide.bf.BfEditor">
      </contextTypeRegistry>
      <include
            file="templates/default.xml">
      </include>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.birenheide.bf.BfPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.birenheide.bf.ui.BfMainPreferencePage"
            id="org.birenheide.bf.MainPage"
            name="Brainfuck">
      </page>
      <page
            category="org.birenheide.bf.MainPage"
            class="org.birenheide.bf.ed.BfEditorPreferencePage"
            id="org.birenheide.bf.Editor"
            name="Editor">
      </page>
      <page
            category="org.birenheide.bf.MainPage"
            class="org.birenheide.bf.ed.template.BfTemplatePreferencePage"
            id="org.birenheide.bf.Templates"
            name="Templates">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.birenheide.bf.Brainfuck"
            name="Brainfuck">
      </category>
      <wizard
            canFinishEarly="false"
            category="org.birenheide.bf.Brainfuck"
            class="org.birenheide.bf.ui.wizard.NewFileWizard"
            finalPerspective="org.birenheide.bf.Brainfuck"
            hasPages="true"
            icon="icons/brainfuck.gif"
            id="org.birenheide.bf.newBrainfuckFile"
            name="Brainfuck File">
         <description>
            Create a new Brainfuck file
         </description>
      </wizard>
   </extension>
   <extension
         id="brainfuckProblemMarker"
         name="Brainfuck Problem"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.core.filebuffers.documentSetup">
      <participant
            class="org.birenheide.bf.ed.BfDocSetupParticipant"
            contentTypeId="org.birenheide.bf.brainfuck">
      </participant>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:common.new.menu?before=new">
         <command
               commandId="org.birenheide.bf.newFileWizard"
               icon="icons/brainfuck.gif"
               label="Brainfuck File"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="org.birenheide.bf.Brainfuck">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.birenheide.bf.ui.wizard.NewFileWizardHandler"
            id="org.birenheide.bf.newFileWizard"
            name="New Brainfuck File...">
      </command>
   </extension>

</plugin>
